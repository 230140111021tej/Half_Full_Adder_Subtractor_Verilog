**Full Adder**


`include "full_adder.v"

module test_full_adder;
    reg a, b, cin;
    wire sum, carry;
    full_adder DUT(a, b, cin, sum, carry);
    initial begin
        $display("Full Adder Truth Table");
        $display("A B CIN | SUM CARRY");
        for (integer i = 0; i < 8; i = i + 1) begin
            a = i[2]; b = i[1]; cin = i[0];
            #1;
            $display("%b %b  %b |  %b    %b", a, b, cin, sum, carry);
        end
        $finish;
    end
endmodule
